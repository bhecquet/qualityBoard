.html
	overflow auto

.content
	font-size 1em
	color $gray-light
	max-height 29em
	overflow auto

	.table
		width 100%


	.project
		font-size 1.25em
		width 100%

		.name
			padding-right 10em
			color $gray-light
			font-size 1em
			border-style none

			.figures
				font-size .5em
				

		.version
			font-size 1em
			float right
			padding-left 10em

	.IssueNumber
		text-align right
		border-width 5em

		.libele
			font-weight bold
			margin-bottom 5em

		.figure
			color $brand-primary
			font-weight bold

	.IssuesStat
		border 1px
		background-color $background-color
		border-radius 30px

		.Priorities
			font-size 1em

			.libele
				margin-left 1em
				color $gray-light

				a:hover
					color white

			.figure
				color $brand-primary
				float right
				margin-right 10em


		.Status
			font-size 1em

			.libele
				margin-left 1em
				color $gray-light

			.figure
				color $brand-primary
				float right
				margin-right 5em



.major
	background-color #ff848a//Red
	border-width 1px
	margin 1em
	padding 0.5em
	


.second
	background-color #a3ffc4//Green
	border-width 1px
	margin 1em
	padding 0.5em
	

.undefined
	background-color #a3c6ff//Blue
	border-width 1px
	margin 1em
	padding 0.5em


.IssuesList
	margin-top 1em
	border-style solid
	color #000000
	font-size 0.85em
	overflow auto
	max-height 6em

	
.id
	border-style solid
	border-color #7A7A7A
	border-width 0.5px
	padding 0.5em
	font-size 0.85em
	text-align center

.version
	border-style solid
	border-color #7A7A7A
	border-width 0.5px
	padding 0.5em
	font-size 0.85em
	text-align center

.status
	border-style solid
	border-color #7A7A7A
	border-width 0.5px
	padding 0.5em

.title
	text-align center
	border-style solid
	border-color #7A7A7A
	border-width 0.5px

.priority
	text-align center
	border-style solid
	border-color #7A7A7A
	border-width 0.5px
	padding 0.25em

.type
	text-align center
	border-style solid
	border-color #7A7A7A
	border-width 0.5px
	padding 0.5em

.titre
	background-color $gray-lighter-plus

a:link
	color black
	text-decoration none

a:visited
	color black
	text-decoration none

a:hover
	color $gray-darker
	font-weight bold

.error
	color white
	background-color $error-color
	font-size 1.5em
	padding 1em
	float center

